@model FoodRemains.Models.FeedbackMaster

@{
    ViewBag.Title = "Create";
}

@*<h2>Create</h2>*@


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="row justify-content-center">
        <div class="col-lg-6">
            @if (@TempData["message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" id="success-alert" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                    <strong>@TempData["message"]</strong>
                </div><br />
            }
            <form class="contact-form container user-form-card">
                <h4>Drop Your Thoughts</h4><br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="form-input-group">
                        @*@Html.EditorFor(model => model.FeedbackType, new { htmlAttributes = new { @class = "form-control", placeholder = "Feedback Type" } })*@
                        Type:
                        @Html.RadioButtonFor(model => model.FeedbackType, "Suggestion", new { htmlAttributes = new { @class = "form-control" } }) Suggestion &nbsp;&nbsp;
                        @Html.RadioButtonFor(model => model.FeedbackType, "Query", new { htmlAttributes = new { @class = "form-control" } }) Query &nbsp;&nbsp;
                        @Html.RadioButtonFor(model => model.FeedbackType, "Comment", new { htmlAttributes = new { @class = "form-control" } }) Comment <br />
                        @Html.ValidationMessageFor(model => model.FeedbackType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-input-group">
                        <i class="icofont-user-alt-3"></i>
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-input-group">
                        <i class="icofont-user-alt-3"></i>
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-input-group">
                        <i class="icofont-email"></i>
                        @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                        @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-input-group">
                        @Html.DropDownList("RestaurantID", null, htmlAttributes: new { @class = "form-control", placeholder = "Select Restaurant" })
                        @Html.ValidationMessageFor(model => model.RestaurantID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-input-group">
                        <i class="icofont-paragraph"></i>
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Your Message" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <button type="submit" class="form-btn-group">
                    <i class="fas fa-envelope"></i><span>
                        send
                        message
                    </span>
                </button>
            </form>
        </div>
    </div>
}

