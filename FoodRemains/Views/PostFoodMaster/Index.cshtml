@model IEnumerable<FoodRemains.Models.PostFoodMaster>

@{
    ViewBag.Title = "Food Post";
}

<h2>List of Posted Food</h2>

<p>
    @Html.ActionLink("Post New Food", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FoodItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServesPerson)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RestaurantMaster.RestaurantName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FoodItem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServesPerson)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RestaurantName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PostedFoodID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PostedFoodID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PostedFoodID })
        </td>
    </tr>
}

</table>
